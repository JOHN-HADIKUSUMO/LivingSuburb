@model LivingSuburb.Models.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Register</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/">Home</a></li>
            <li class="active">Register</li>
        </ul>
    </div>
</div><!--/breadcrumbs-->
<div class="row">
    <div class="col-md-offset-2 col-md-4 ht450">
        <section>
            <form asp-controller="Account" asp-action="Register" class="sky-form mrt50 mrb20" method="post">
                <header class="text-center">Create Your Account Here</header>
                <fieldset>
                    <section>
                        <label class="label" asp-for="Fullname"></label>
                        <label class="input">
                            <input asp-for="Fullname" />
                        </label>
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                    </section>
                    <section>
                        <label class="label" asp-for="Email"></label>
                        <label class="input">
                            <input asp-for="Email" />
                        </label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </section>
                    <section>
                        <label class="label" asp-for="Password"></label>
                        <label class="input">
                            <input asp-for="Password" />
                        </label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </section>
                    <section>
                        <label class="label" asp-for="ConPassword"></label>
                        <label class="input">
                            <input asp-for="ConPassword" />
                        </label>
                        <span asp-validation-for="ConPassword" class="text-danger"></span>
                    </section>
                    <section class="text-right">
                        <button type="submit" class="btn-u">Submit</button>
                    </section>
                </fieldset>
            </form>
        </section>
    </div>
    <div class="col-md-5">
        <section>
            <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" class="sky-form mrt50 mrb20" method="post">
                <header class="text-center">Register/Login with Other Accounts</header>
                <fieldset>
                    <section>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                        }
                    </section>
                </fieldset>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        var appModule = angular.module('appModule', []);
    </script>
}

