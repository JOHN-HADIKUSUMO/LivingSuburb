@{
    ViewData["Title"] = "Jobs ";
}
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs">
    <div class="container">
        <h1 class="pull-left">Jobs</h1>
        <ul class="pull-right breadcrumb"></ul>
    </div>
</div><!--/breadcrumbs-->
<div class="container content" ng-controller="jobController">
    <div class="row">
        <form class="sky-form no-padding no-margin searchForm" novalidate autocomplete="off" style="border:none;">
            <div class="col-md-5">
                <fieldset class="no-padding">
                    <section>
                        <label class="label">Keywords</label>
                        <label class="input">
                            <input type="text" ng-model="keywords" name="keywords" ng-keyup="onKeyup()" />
                        </label>
                        <div class="list input" ng-show="keywordlist.length > 0">
                            <ul>
                                <li ng-repeat="item in keywordlist">
                                    <p><a ng-click="onSelected(item)">{{item}}</a></p>
                                </li>
                            </ul>
                        </div>
                    </section>
                </fieldset>
            </div>
            <div class="col-md-3">
                <fieldset class="no-padding">
                    <section>
                        <label class="label">Category</label>
                        <label class="select">
                            <select ng-model="category" ng-options="item.name for item in categoryList track by item.id"></select>
                            <i></i>
                        </label>
                    </section>
                </fieldset>
            </div>
            <div class="col-md-3">
                <fieldset class="no-padding">
                    <section>
                        <label class="label">State</label>
                        <label class="select">
                            <select ng-model="state" ng-options="item.name for item in stateList track by item.id"></select>
                            <i></i>
                        </label>
                    </section>
                </fieldset>
            </div>
            <div class="col-md-1">
                <fieldset class="no-padding">
                    <section>
                        <label class="label">&nbsp;</label>
                        <button type="submit" class="btn-u" ng-click="btnClick()">Search</button>
                    </section>
                </fieldset>
            </div>
        </form>
        <div class="col-md-12">
            <img class="pull-right" ng-show="isprogressing" alt="progressing..." title="progressing..." src="~/assets/img/progressbar.gif" />
        </div>
    </div>
    <div class="row  ht450 margin-top-20">
        <div class="col-md-12">
            <list-job keywords="keywords" category="category" subcategory="subcategory" state="state" istriggered="istriggered" isprogressing="isprogressing" pageno="pageno" pagesize="pagesize" blocksize="blocksize" />
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="/assets/js/tag.js"></script>
    <script type="text/javascript" src="/assets/js/common.js"></script>
    <script type="text/javascript" src="/assets/js/state.js"></script>
    <script type="text/javascript" src="/assets/js/suburb.js"></script>
    <script type="text/javascript" src="/assets/js/jobCategory.js"></script>
    <script type="text/javascript" src="/assets/js/jobSubCategory.js"></script>
    <script type="text/javascript" src="/assets/js/job.js"></script>
    <script type="text/javascript">
        var appModule = angular.module('appModule', ['jobModule']);
    </script>
}